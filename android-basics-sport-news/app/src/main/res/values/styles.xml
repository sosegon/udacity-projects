<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- item_news style -->
    <style name="crd_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/news_height</item>
        <item name="android:layout_margin">@dimen/txt_padding</item>
    </style>
    <style name="rl_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="img_thumbnail">
        <item name="android:layout_width">@dimen/news_height</item>
        <item name="android:layout_height">@dimen/news_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/placeholder</item>
    </style>
    <style name="txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/txt_padding</item>
        <item name="android:layout_toRightOf">@+id/img_thumbnail</item>
    </style>
    <style name="txt_headline" parent="txt">
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/txt_news_headline</item>
    </style>
    <style name="txt_type" parent="txt">
        <item name="android:layout_below">@+id/txt_headline</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/txt_news_type</item>
    </style>

    <!-- activity_main style -->
    <style name="rcv_news">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    <style name="rl_overall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="txt_message">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="prg_load">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="ll_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ll_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="etx_book">
        <item name="android:layout_height">@dimen/imb_search</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/txt_padding</item>
    </style>
    <style name="imb_search">
        <item name="android:layout_width">@dimen/imb_search</item>
        <item name="android:layout_height">@dimen/imb_search</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:src">@drawable/search</item>
    </style>

</resources>
