  <dimen name="widget_stock_min_resize_height">@dimen/widget_stock_default_height</dimen>
  <!--widget list-->
  <dimen name="widget_stock_list_default_width">180dp</dimen> <!--3 cols-->
  <dimen name="widget_stock_list_default_height">180dp</dimen> <!--3 rows-->
  <dimen name="widget_stock_list_min_resize_width">180dp</dimen> <!--3 cols-->
  <dimen name="widget_stock_list_min_resize_height">110dp</dimen> <!--2 rows-->

