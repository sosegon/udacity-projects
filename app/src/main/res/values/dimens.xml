  <dimen name="activity_vertical_margin">@dimen/dist_sma</dimen>

  <dimen name="dist_mic">4dp</dimen>
  <dimen name="dist_sma">16dp</dimen>
  <dimen name="dist_med">32dp</dimen>
  <dimen name="dist_lrg">64dp</dimen>

