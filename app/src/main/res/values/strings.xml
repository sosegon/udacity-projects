<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <string name="app_name">Popular Movies</string>

    <!-- Base urls to connect to the server and retrieve data -->
    <string name="base_query_url" translatable="false">https://api.themoviedb.org/3/movie/</string>
    <string name="base_img_url" translatable="false">http://image.tmdb.org/t/p/w185</string>
    <string name="base_search_url" translatable="false">https://api.themoviedb.org/3/search/movie</string>

    <!-- Meaningful messages presented to the user in case of errors -->
    <string name="msg_no_connection">No connection available</string>
    <string name="msg_server_error">Server error, cannot fetch data</string>
    <string name="msg_data_no_available">No <xliff:g id="data">%1$s</xliff:g> available</string>
    <string name="msg_data_no_available_no_network">No <xliff:g id="data">%1$s</xliff:g> available. The network is not accessible.</string>
    <string name="msg_data_no_available_server_down">No <xliff:g id="data">%1$s</xliff:g> available. The server is not returning data.</string>
    <string name="msg_data_no_available_server_error">No <xliff:g id="data">%1$s</xliff:g> available. The server is not returning valid data.</string>

    <!-- Common labels used through the application -->
    <string name="lbl_settings">Settings</string>
    <string name="lbl_catalog">Catalog</string>
    <string name="lbl_search">Search</string>
    <string name="lbl_movies">Movies</string>
    <string name="lbl_reviews">Reviews</string>
    <string name="lbl_details">Details</string>
    <string name="lbl_trailers">Trailers</string>
    <string name="lbl_query">Query by</string>
    <string name="lbl_popular">Popular</string>
    <string name="lbl_rating">Rating</string>
    <string name="lbl_favourite">Favourite</string>

    <!-- Preference key for querying the movies -->
    <string name="prf_key_sort" translatable="false">sort</string>

    <!-- Default value for querying movies -->
    <string name="prf_default_sort" translatable="false">popular</string>

    <!-- Labels for values for querying preference key -->
    <string-array name="prf_entries_sort">
        <item>@string/lbl_popular</item>
        <item>@string/lbl_rating</item>
        <item>@string/lbl_favourite</item>
    </string-array>

    <!-- Possible values for preference key query -->
    <string-array name="prf_values_sort">
        <item>popular</item>
        <item>top_rated</item>
        <item>favourite</item>
    </string-array>

    <!-- Labels for values for querying mode key -->
    <string-array name="lbls_movies_mode">
        <item>@string/lbl_catalog</item>
        <item>@string/lbl_search</item>
    </string-array>

    <!-- String to be used in reviews to set "Author:" and the name in a single string -->
    <string name="review_author">Author: <xliff:g id="author_name">%1$s</xliff:g> </string>

    <!-- Name of the folder to store the movie posters -->
    <string name="folder_posters" translatable="false">posters</string>

    <!-- Values for the SyncAdapter -->
    <string name="sync_account_type" translatable="false">popularmovies.keemsa.com</string>
    <string name="content_authority" translatable="false">com.keemsa.popularmovies</string>

    <!-- Preference key for movies status key -->
    <string name="pref_movies_status_key" translatable="false">movies</string>

    <!-- Preference key for search keyword -->
    <string name="pref_search_keyword_key" translatable="false">search_keyword</string>

    <!-- Preference key for movie mode (Catalog or Search) -->
    <string name="pref_movie_mode_key" translatable="false">movie_mode</string>

    <!-- GCM -->
    <string name="gcm_movie_alert">Heads up: %1$s!</string>
    <string name="gcm_defaultSenderId_" translatable="false">anse23</string>

    <!-- Transition names for shareable elements -->
    <string name="tra_movie_poster" translatable="false">tra_movie_poster</string>
</resources>
