<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dist_lrg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dist_sma"
    android:paddingRight="@dimen/dist_sma"
    android:paddingStart="@dimen/dist_sma"
    android:paddingEnd="@dimen/dist_sma"
    >
  <TextView
      android:id="@+id/stock_symbol"
      style="@style/StockSymbolTextStyle"
      android:textColor="@color/colorPrimaryText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="GOOG"
      />
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="end">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/pgr"
        android:contentDescription="@string/desc_stock_loading"
        />
    <TextView
        android:id="@+id/bid_price"
        style="@style/BidPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dist_sma"
        android:paddingEnd="@dimen/dist_sma"
        tools:text="1000.00"
        android:visibility="visible"
        android:textColor="@color/colorSecondaryText"
        />
    <TextView
        android:id="@+id/change"
        android:background="@drawable/percent_change_pill"
        style="@style/PercentChangeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dist_mic"
        android:paddingRight="@dimen/dist_mic"
        android:paddingStart="@dimen/dist_mic"
        android:paddingEnd="@dimen/dist_mic"
        tools:text="100%"
        android:visibility="visible"
        android:textColor="@color/colorPrimaryText"
        />
  </LinearLayout>
</LinearLayout>