<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match">

    <RelativeLayout
        style="@style/match_match"
        tools:context="com.keemsa.popularmovies.MovieDetailsActivity">

        <TextView
            android:id="@+id/txt_title_details"
            style="@style/txt_title_details" />

        <View
            style="@style/divider"
            android:layout_below="@id/txt_title_details"></View>

        <ImageView
            android:id="@+id/imv_movie_poster_details"
            style="@style/imv_movie_poster_details" />

        <TextView
            android:id="@+id/txt_year_details"
            style="@style/txt_year_details" />

        <TextView
            android:id="@+id/txt_score_details"
            style="@style/txt_score_details" />

        <View
            style="@style/divider"
            android:layout_below="@id/imv_movie_poster_details"></View>

        <TextView
            android:id="@+id/txt_desc_details"
            style="@style/txt_desc_details" />

    </RelativeLayout>
</ScrollView>