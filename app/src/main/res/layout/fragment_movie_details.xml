<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match">

    <RelativeLayout style="@style/match_match">

        <ImageView
            android:id="@+id/imv_movie_poster_details"
            style="@style/imv_movie_poster_details"
            android:transitionName="@string/tra_movie_poster" /> <!--this is the destination of the shared element (the movie poster) -->

        <TextView
            android:id="@+id/txt_year_details"
            style="@style/txt_year_details" />

        <TextView
            android:id="@+id/txt_score_details"
            style="@style/txt_score_details" />

        <ImageView
            android:id="@+id/imv_movie_fav_details"
            style="@style/imv_movie_fav_details" />

        <TextView
            android:id="@+id/txt_desc_details"
            style="@style/txt_desc_details" />


    </RelativeLayout>
</ScrollView>
