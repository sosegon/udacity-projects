<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/rl_overall"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/txt_message"
        style="@style/txt_message"
        android:text="@string/msg_click_to_add_product" />

    <ProgressBar
        android:id="@+id/pgr_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_products"
        style="@style/rcv_products" />

    <Button
        android:id="@+id/btn_add_product"
        style="@style/btn_add_product"
        android:background="@drawable/round_button"
        android:text="@string/label_add_product" />
</RelativeLayout>
