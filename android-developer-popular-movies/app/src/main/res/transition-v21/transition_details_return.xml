<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:duration="500">
    <slide android:slideEdge="left">
        <targets>
            <target android:targetId="@id/imv_movie_poster_details"/>
        </targets>
    </slide>
    <slide android:slideEdge="right">
        <targets>
            <target android:targetId="@id/txt_year_details"/>
            <target android:targetId="@id/txt_score_details"/>
            <target android:targetId="@id/imv_movie_fav_details"/>
        </targets>
    </slide>
    <slide android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/txt_desc_details"/>
        </targets>
    </slide>
</transitionSet>
